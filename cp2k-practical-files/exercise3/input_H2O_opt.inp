&GLOBAL
  PRINT_LEVEL LOW
  PROJECT exercise3
  RUN_TYPE GEO_OPT
&END GLOBAL


&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    CHARGE 0
    MULTIPLICITY 1
    &MGRID
      NGRIDS 4
      CUTOFF 500
      REL_CUTOFF 60
    &END
    &QS
      EPS_DEFAULT 1.0E-12
      METHOD GPW
    &END

    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 5.e-7
      MAX_SCF 15
      &OT
        PRECONDITIONER FULL_ALL
        MINIMIZER DIIS
      &END OT
      &OUTER_SCF
        EPS_SCF 5.0E-7
        MAX_SCF 1
      &END OUTER_SCF
    &END SCF

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &XC_GRID
        ! defaults
        XC_SMOOTH_RHO NONE
        XC_DERIV PW
      &END XC_GRID
    &END XC

  &END DFT

  &SUBSYS
    &CELL
      ABC 9.8528 9.8528 9.8528
      PERIODIC XYZ
    &END CELL

    &COORD
      O       2.200000       9.100000       5.100000
      H       1.800000       9.800000       5.500000
      H       3.100000       9.100000       5.600000
    &END COORD

    &KIND H
      BASIS_SET DZVP-MOLOPT-SR-GTH-q1
      POTENTIAL GTH-PBE-q1
    &END

    &KIND O
      BASIS_SET DZVP-MOLOPT-SR-GTH-q6
      POTENTIAL GTH-PBE-q6
    &END KIND

  &END SUBSYS

  &PRINT
    &FORCES
    &END
  &END
&END FORCE_EVAL

&MOTION

  &GEO_OPT
    TYPE MINIMIZATION
    MAX_DR    1.0E-03
    MAX_FORCE 1.0E-03
    RMS_DR    1.0E-03
    RMS_FORCE 1.0E-03
    MAX_ITER 200
    OPTIMIZER CG
    &CG
      MAX_STEEP_STEPS  0
      RESTART_LIMIT 9.0E-01
    &END CG
  &END GEO_OPT

&END MOTION
